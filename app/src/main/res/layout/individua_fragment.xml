<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="我"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/individua_usermsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/course_list_selector"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <com.yuangumedicine.view.MyImageView
                    android:id="@+id/individua_usermsg_img"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@mipmap/init" />

                <TextView
                    android:id="@+id/individua_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="admin" />
            </LinearLayout>


            <TextView
                android:id="@+id/individua_usersetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="个人设置" />

            <TextView
                android:id="@+id/individua_myarticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="我的文章" />

            <TextView
                android:id="@+id/individua_mycase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.75dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="我的病例" />

            <TextView
                android:id="@+id/individua_mymessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="我的消息" />

            <TextView
                android:id="@+id/individua_talentmarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="人才市场" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
