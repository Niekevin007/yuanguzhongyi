<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backColor">

    <include layout="@layout/titlebar"/>

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_et"
            android:layout_marginTop="15dip"
            android:hint="请输入用户姓名"
            android:lines="1"
            android:maxLength="11"
            android:padding="10dip"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/register_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_et"
            android:layout_marginTop="1dip"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="11"
            android:padding="10dip"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="1dip"
            android:orientation="horizontal"
            android:paddingRight="10dip"
            android:background="#fff">

            <EditText
                android:id="@+id/register_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_et"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10dip"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/register_getcode"
                android:layout_width="80dip"
                android:layout_height="25dip"
                android:background="@drawable/register_com"
                android:padding="5dip"
                android:text="获取验证码"
                android:textColor="#11B7F3"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_et"
            android:hint="请输入密码"
            android:layout_marginTop="1dip"
            android:inputType="textVisiblePassword"
            android:maxLength="16"
            android:padding="10dip"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_et"
            android:hint="请再次输入密码"
            android:layout_marginTop="1dip"
            android:inputType="textVisiblePassword"
            android:maxLength="16"
            android:padding="10dip"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/is_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"/>
        <TextView
            android:id="@+id/register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"
            android:layout_marginLeft="20dip"
            android:text="注册协议"/>
    </LinearLayout>
        <Button
            android:id="@+id/register_commint"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_com"
            android:text="注册"
            android:textSize="14sp"/>

    </LinearLayout>

