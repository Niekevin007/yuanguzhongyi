<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.yuangumedicine.view.MyViewPager
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dip"
        android:background="#c2c2c2"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/home_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_message_img"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:paddingLeft="3dip"
                android:paddingTop="3dip"
                android:paddingRight="3dip"
                android:src="@mipmap/zhanweitu" />

            <TextView
                android:id="@+id/home_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="我的患者" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c2c2c2"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/home_woke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_woke_img"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:paddingLeft="3dip"
                android:paddingTop="3dip"
                android:paddingRight="3dip"
                android:src="@mipmap/zhanweitu" />

            <TextView
                android:id="@+id/home_woke_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疑难求助"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c2c2c2"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/home_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_project_img"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:paddingLeft="3dip"
                android:paddingTop="3dip"
                android:paddingRight="3dip"
                android:src="@mipmap/zhanweitu" />

            <TextView
                android:id="@+id/home_project_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="通讯录" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c2c2c2"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/home_individual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_individual_img"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:paddingLeft="3dip"
                android:paddingTop="3dip"
                android:paddingRight="3dip"
                android:src="@mipmap/zhanweitu"/>

            <TextView
                android:id="@+id/home_individual_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="个人" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
