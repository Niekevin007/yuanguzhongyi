<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <include layout="@layout/titlebar"/>

    <EditText
        android:id="@+id/forget_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/login_et"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:singleLine="true"
        android:padding="10dip"
        android:textSize="14sp"
        android:inputType="phone"
        android:textColorHint="@color/hint_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#fff" 
        android:paddingRight="10dip">

        <EditText
            android:id="@+id/forget_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_et"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:singleLine="true"
            android:padding="10dip"
            android:textSize="14sp"
            android:inputType="number"
            android:textColorHint="@color/hint_color" />

        <Button
            android:id="@+id/forget_getcode"
            android:layout_width="80dip"
            android:layout_height="25dip"
            android:background="@drawable/register_com"
            android:padding="5dip"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="#11B7F3"/>
    </LinearLayout>

    <EditText
        android:id="@+id/forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@drawable/login_et"
        android:hint="请输入新密码"
        android:maxLength="16"
        android:singleLine="true"
        android:padding="10dip"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@+id/forget_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@drawable/login_et"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:singleLine="true"
        android:padding="10dip"
        android:textSize="14sp"
        android:textColorHint="@color/hint_color" />

    <Button
        android:id="@+id/forget_commint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/login_com"
        android:textSize="16sp"
        android:textColor="#fff"
        android:padding="10dip"
        android:text="确定" />

</LinearLayout>