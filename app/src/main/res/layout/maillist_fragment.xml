<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="通讯录"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/maillist_seach"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="搜索"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/maillist_newfri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="新的朋友" />

            <TextView
                android:id="@+id/maillist_groupchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.75dp"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="群聊" />

            <TextView
                android:id="@+id/maillist_freeconsultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="免费咨询" />

            <TextView
                android:id="@+id/maillist_difficulthelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.75dp"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="疑难求助" />

            <TextView
                android:id="@+id/maillist_registernum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.75dp"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="预约挂号" />

            <TextView
                android:id="@+id/maillist_familydoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.75dp"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="家庭医生" />

            <TextView
                android:id="@+id/maillist_doctorfriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/course_list_selector"
                android:drawableLeft="@mipmap/zhanweitu"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="医生好友" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
