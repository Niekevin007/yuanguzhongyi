<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="@drawable/course_list_selector">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.yuangumedicine.view.MyImageView
            android:id="@+id/item_myarticle_usermsg_img"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@mipmap/init" />

        <TextView
            android:id="@+id/item_myarticle_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="admin" />


        <TextView
            android:id="@+id/item_myarticle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2016-00-00 00:00:00"
            android:textColor="@color/msg_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_myarticle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_marginTop="0.75dp"
        android:padding="5dip"
        android:textColor="@color/msg_color" />

</LinearLayout>
